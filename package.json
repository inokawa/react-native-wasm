{
  "name": "react-native-wasm",
  "version": "0.1.3",
  "description": "A polyfill to use WebAssembly in React Native.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-wasm.podspec",
    "!android/build",
    "!ios/build"
  ],
  "scripts": {
    "build": "rollup -c",
    "tsc": "tsc -p . --noEmit",
    "tsc:d": "tsc -p . --outDir lib -d --emitDeclarationOnly",
    "test": "jest",
    "wasm2c": "rimraf ./module/* && cpx 'wasm-rt*' module && wasm-opt add.wasm -O4 -o ./module/wasm-lib.wasm && wasm2c ./module/wasm-lib.wasm -o ./module/wasm-lib.c",
    "prepublishOnly": "git clean -d -x -f ./android && git clean -d -x -f ./ios && rimraf lib && npm run build && npm run tsc:d"
  },
  "dependencies": {
    "binaryen": "104.0.0",
    "wabt": "1.0.25"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.3.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.62.13",
    "cpx": "1.5.0",
    "jest": "^26.0.1",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "rimraf": "3.0.2",
    "rollup": "2.61.1",
    "tslib": "2.3.1",
    "typescript": "4.5.4"
  },
  "peerDependencies": {
    "react-native": ">=0.59.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inokawa/react-native-wasm.git"
  },
  "keywords": [
    "react",
    "react-native",
    "webassembly",
    "wasm",
    "polyfill",
    "ios",
    "android"
  ],
  "author": "inokawa <stratoooo-taster@yahoo.co.jp> (https://github.com/inokawa/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inokawa/react-native-wasm/issues"
  },
  "homepage": "https://github.com/inokawa/react-native-wasm#readme"
}
